
<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Connection<span class="caret"></span></a>
    <ul class="dropdown-menu" role="menu">
        <!--Si l'utilisateur n'est pas connecté-->
        @if (!User.Identity.IsAuthenticated)
        {
            <li>@Html.ActionLink("Login", "Login", "Auth")</li>
            <li>@Html.ActionLink("Logout", "Logout", "Auth")</li>
            <li>@Html.ActionLink("Create", "Create", "Utilisateur")</li>
            
        }

        <!--Si l'utilisateur est connecté-->
        <!--Afficher Compte, Pokémons Favoris, Logout-->
        @if (User.Identity.IsAuthenticated)
        {
            <li>@Html.ActionLink("Lista de produtos", "Index", "Home")</li>
            <li>@Html.ActionLink("Lista de usuarios", "Index", "Utilisateur")</li>
            //les playlist,videos,
        }
    </ul>
</li>

